{
  "name": "@ebinion/zeke-design-system",
  "author": "Zeke Binion <zeke@binion.io> (https://zekebinion.io)",
  "description": "This repo is the home of the design system for Zeke Binion. It drives things like Zeke's website, portfolio and experimental sites.",
  "main": "dist/index.js",
  "version": "0.1.5",
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "styled-components": "^4.4.0",
    "@babel/cli": "^7.7.0"
  },
  "scripts": {
    "start": "start-storybook -p 9009 -s public",
    "build": "BABEL_ENV=production babel src -d dist --copy-files",
    "test": "react-scripts test",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint ./src",
    "release": "auto shipit",
    "prepare": "npm run build"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": "error"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "jsxBracketSameLine": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-docs": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "auto": "^7.16.2",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.11.0",
    "@storybook/addon-knobs": "^5.2.5",
    "lorem-ipsum": "^2.0.3",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebinion/zeke-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/ebinion/zeke-design-system/issues"
  },
  "homepage": "https://github.com/ebinion/zeke-design-system#readme"
}
